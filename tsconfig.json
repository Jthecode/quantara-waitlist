{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "moduleDetection": "force",

    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": true,
    "allowImportingTsExtensions": true,

    "types": ["node"],
    "lib": ["ES2022", "DOM"],
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@/types/*": ["./types/*"],
      "types/*": ["./types/*"],
      "@/lib/*": ["./api/_lib/*", "./lib/*"]
    },

    "noEmit": true
  },
  "include": [
    "api/**/*.ts",
    "lib/**/*.ts",
    "db/**/*.ts",
    "scripts/**/*.ts",
    "public/scripts/**/*.ts",
    "types/**/*.ts",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "db/migrations/**",
    "netlify/**"
  ]
}