{
  "version": 2,
  "public": true,
  "cleanUrls": true,
  "trailingSlash": false,

  "rewrites": [
    { "source": "/", "destination": "/public/index.html" },
    { "source": "/((?!api/).*)", "destination": "/public/$1" }
  ],

  "redirects": [
    {
      "source": "/:path*",
      "has": [{ "type": "host", "value": "quantara-waitlist.com" }],
      "destination": "https://www.quantara-waitlist.com/:path*",
      "permanent": true
    }
  ],

  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
      ]
    }
  ]
}
